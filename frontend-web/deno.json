{
  "compilerOptions": { "jsx": "react-jsx", "jsxImportSource": "preact" },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "@preact/signals": "npm:@preact/signals@^2.5.1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.18",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@1.0.8",
    "preact": "npm:preact@^10.27.2",
    "tailwindcss": "npm:tailwindcss@4.1.18",
    "tailwindcss/": "npm:/tailwindcss@4.1.18/",
    "tailwindcss/plugin": "npm:/tailwindcss@4.1.18/plugin.js",
    "vite": "npm:vite@7.3.0"
  },
  "lint": {
    "rules": {
      "exclude": ["jsx-no-useless-fragment", "jsx-curly-braces"],
      "tags": ["fresh", "recommended"]
    }
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "build": "deno task gen:data; deno task check && vite build",
    "check": "deno task gen:data; deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "gen:data": "./scripts/generate_data.sh && deno fmt",
    "gen:voice_list": "./scripts/generate_voice_list.sh && deno fmt",
    "preview": "deno task gen:data; deno task check && deno serve -A _fresh/server.js",
    "start": "deno task gen:data; vite --port=8000",
    "update": "deno run -A -r jsr:@fresh/update ."
  }
}
