{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.17",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@1.0.8",
    "preact": "npm:preact@^10.27.2",
    "tailwindcss": "npm:tailwindcss@4.1.17",
    "tailwindcss/": "npm:/tailwindcss@4.1.17/",
    "tailwindcss/plugin": "npm:/tailwindcss@4.1.17/plugin.js",
    "vite": "npm:vite"
  },
  "lint": {
    "rules": {
      "exclude": [
        "jsx-no-useless-fragment",
        "jsx-curly-braces"
      ],
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "build": "deno task gen:data; deno task check && vite build",
    "check": "deno task gen:data; deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "gen:data": "./scripts/generate_data.sh && deno fmt",
    "gen:voice_list": "./scripts/generate_voice_list.sh && deno fmt",
    "preview": "deno task gen:data; deno task check && deno serve -A _fresh/server.js",
    "start": "deno task gen:data; vite",
    "update": "deno run -A -r jsr:@fresh/update ."
  }
}
